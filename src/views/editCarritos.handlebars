<div style="display: flex; margin-top: 30px">
    <div id="container" class="mx-auto" style="width: 45%">
    <h2 class="alert-info text-center">CARRITO ID: <span id="idNumber">{{id}}</span></h2>
        <table class="table table-stripped" id="tableProd">
            <thead class="table-info">
                <tr>
                    <th class="text-center" scope="col">Titulo</th>
                    <th class="text-center" scope="col">Descripción</th>
                    <th class="text-center" scope="col">Precio</th>
                    <th class="text-center" scope="col">Código</th>
                    <th class="text-center" scope="col">Thumbnail</th>
                    <th class="text-center" scope="col">Stock</th>
                    <th class="text-center" scope="col">Categoría</th>
                    <th class="text-center" scope="col">Status</th>
                    <th class="text-center" scope="col">ID</th>
                    <th class="text-center" scope="col">Cantidad</th>
                </tr>
            </thead>
            <tbody id="body">
               {{#if cartExist}}
                {{#each cartProducts}}
                <tr>
                    <td class="text-center">{{this.title}}</td>
                    <td class="text-center">{{this.description}}</td>
                    <td class="text-center">{{this.price}}</td>
                    <td class="text-center">{{this.code}}</td>
                    <td class="text-center"><img style="width:35px" src={{this.thumbnail}} alt="prd-img"></td>
                    <td class="text-center">{{this.stock}}</td>
                    <td class="text-center">{{this.category}}</td>
                    <td class="text-center">{{this.status}}</td>
                    <td class="text-center">{{this._id}}</td>
                    <td class="text-center alert-danger">{{this.quantity}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
         {{else}}
        </tbody>
        </table>
        <div id="alertContainer">
            <div id="boxAlert" class="alert alert-danger mx-auto" style="width: 400px" role="alert">
                <span class="mx-auto"> No existen productos agregados a este carrito por el momento.</span>
            </div>
        </div>
         {{/if}}

        <div class="mx-auto" style="margin-top:100px;">
            <form id="updateCart" style="display: flex; width: 100%; justify-content: center; ">
                <div class="form-group" style="border: 3px solid #17a2b8; padding: 12px; display: flex; flex-direction: column; align-items: center;"; >
                    <label class="alert-info" style="padding:2px;">Agregar unidad de producto por ID</label>
                    <input
                    style="width: 350px"
                    type="text"
                    class="form-control"
                    id="prodId"
                    placeholder="Ingresar ID"
                    />
                    <button type="submit" class="btn-info" style="margin-top: 10px; width: 30%;">Actualizar </button>
                </div>
            </form>
        </div>
    </div>    



    <div id="container" class="mx-auto" style="width: 25%">
    <h2 class="alert-info text-center">Catalogo de Productos por agregar</h2>
        <table class="table table-stripped" id="tableProd">
            <thead class="table-dark">
                <tr>
                    <th class="text-center" scope="col">Titulo</th>
                    <th class="text-center" scope="col">Precio</th>
                    <th class="text-center" scope="col">Stock</th>
                    <th class="text-center" scope="col">Status</th>
                    <th class="text-center" scope="col">ID</th>
                </tr>
            </thead>
            <tbody id="body">
                {{#if catalogExists}}
                {{#each catalogProducts}}
                <tr>
                    <td class="text-center">{{this.title}}</td>
                    <td class="text-center">{{this.price}}</td>
                    <td class="text-center">{{this.stock}}</td>
                    <td class="text-center">{{this.status}}</td>
                    <td class="text-center">{{this._id}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        </tbody>
        </table>
        <div id="alertContainer">
            <div id="boxAlert" class="alert alert-danger mx-auto" style="width: 400px" role="alert">
                <span class="mx-auto"> No existen productos agregados a este catalogo por el momento.</span>
            </div>
        </div>
        {{/if}}
    </div>
</div>

